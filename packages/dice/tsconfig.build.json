{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "__tests__",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "addExtension": {
        "pattern": "^(\\./|\\.\\./)",
        "replace": "$1.js"
      }
    }
  }
}
