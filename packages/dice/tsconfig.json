{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "outDir": "dist",
    "isolatedModules": true,
    "types": ["node", "vitest"],
    "baseUrl": ".",
    "paths": {
      "@dice/*": ["src/*"],
      "@platonic-dice/core": ["../core/dist-types.d.ts"],
      "@platonic-dice/core/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
